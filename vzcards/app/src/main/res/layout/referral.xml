<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Layout1">
        <ImageView
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:id="@+id/feedImage"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:background="@drawable/profile_pic_placeholder"/>
        />
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:id="@+id/l2">
            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text=" Name "
                android:id="@+id/referralName"
                android:layout_toRightOf="@+id/image1"
                android:layout_alignTop="@id/image1"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="referred"
                android:gravity="right"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="for"
                android:textSize="15sp"
                android:gravity="top"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_below="@+id/name"
                android:textSize="18sp"
                android:text="Name"
                android:id="@+id/referred"
                android:layout_marginTop="35dp"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/profilePic"
                android:layout_marginTop="30dp"
                android:src="@drawable/profile_pic_placeholder"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout1"
        android:background="#ea1624"></View>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5f8ac7"
        android:layout_marginBottom="0dp"
        android:id="@+id/l8"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/drawable1"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center">
            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/profilebtn"
                android:layout_marginTop="0.2dp"
                android:background="@drawable/button_color"
                android:textColor="@drawable/text_color"
                android:text="Profile"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginLeft="-2dp"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#ffffff"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/vzfrnds"
                android:textSize="15sp"
                android:text="VZFriends"
                android:background="@drawable/button_color2"
                android:textColor="@drawable/text_color"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#ffffff" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/referral"
                android:text="Referral"
                android:background="@drawable/button_color"
                android:textColor="@drawable/text_color"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
