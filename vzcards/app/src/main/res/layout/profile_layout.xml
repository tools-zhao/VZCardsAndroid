<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_frame"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="?android:attr/colorBackground"
    android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#43c1d9f2"
        android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/l2"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/l1">


                    <RelativeLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="211dp"
                        android:splitMotionEvents="false">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.8"
                        android:id="@+id/profilePic"
                        android:src="@drawable/profile_pic_placeholder"
                        android:layout_alignParentBottom="true" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:src="@drawable/com_logo"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/btn_pick"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.6"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/profilePic" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/name"
                            android:background="@color/disabled_gray"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textColor="#ffff"
                            android:text="Name"
                            android:textSize="15sp"/>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="26dp"
                        android:text="Edit"
                        android:background="@color/primaryGreen"
                        android:id="@+id/edit"
                        android:textAllCaps="false"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:textColor="#ffffff"/>
                    <Button
                        android:layout_width="75dp"
                        android:layout_height="26dp"
                        android:text="Cancel"
                        android:id="@+id/cancel"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="2dp"
                        android:textAllCaps="false"
                        android:layout_weight="0.3"
                        android:visibility="visible"
                        android:layout_marginLeft="200dp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="@color/primaryRed"/>
                    </RelativeLayout>
                </LinearLayout>



                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="680dp"
                        android:id="@+id/profileList"
                        android:layout_below="@+id/l2"
                        android:visibility="gone"
                        android:descendantFocusability="afterDescendants"
                        android:dividerHeight="-3.0sp"
                        android:layout_marginBottom="15dp"></ListView>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:visibility="visible"
            android:id="@+id/profileList2"
            android:layout_below="@+id/l2"
            android:layout_marginBottom="15dp"
            android:descendantFocusability="afterDescendants"
            android:dividerHeight="-22dp"
            android:divider="@null"></ListView>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="0dp"
            android:id="@+id/l8"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/profilebtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:text="Profile"
                    android:background="@drawable/button_color"
                    android:button="@null"
                    android:textColor="@drawable/text_color"
                    android:checked="true"
                    android:layout_weight="1"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/vzfrnds"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/button_color2"
                    android:text="VZFriends"
                    android:button="@null"
                    android:textColor="@drawable/text_color"
                    android:layout_weight="1"
                    android:layout_marginLeft="-2dp"
                    android:gravity="center"
                    android:checked="false"
                    />

                <RadioButton
                    android:id="@+id/referralbtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Referral"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="-2dp"
                    android:textColor="@drawable/text_color"
                    android:background="@drawable/button_color3"
                    android:button="@null"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:checked="false"/>


            </RadioGroup>
        </LinearLayout>




</RelativeLayout>