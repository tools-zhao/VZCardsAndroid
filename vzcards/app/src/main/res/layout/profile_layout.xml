<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_frame"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="?android:attr/colorBackground"
    android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="match_parent"
    android:background="#43c1d9f2"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_above="@+id/l8"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#434951"
            android:id="@+id/l1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#434951"
        android:id="@+id/l2"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/l1"
        android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="40dp"
        android:src="@drawable/phone"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/callImage"
        android:background="@drawable/drawable2"/>

    <com.bitjini.vzcards.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.8"
        android:id="@+id/profilePic"
        android:src="@drawable/profile_pic_placeholder"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/no_pic_placeholder_white"
            android:layout_gravity="center"
            android:background="@drawable/drawable2"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_pick"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#434951"
        android:id="@+id/l3"
        android:weightSum="1"
        android:layout_below="@+id/l2"
        android:gravity="right">
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="Edit"
            android:id="@+id/edit"
            android:layout_weight="1"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/drawable_edit"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/l3"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/l4"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Industry:"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/industry"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="IT"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/l5"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Company:"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Bitjini"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/l6"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="veena@bitjini.com"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/l8"
        android:layout_marginTop="10dp"
        android:id="@+id/l7">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:layout_gravity="center"
            android:gravity="left"
            android:background="@android:color/transparent"
            android:text="Adarsh Nagar Vadgaon
            Belgaum"/>
    </LinearLayout>

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5f8ac7"
        android:layout_marginBottom="0dp"
        android:id="@+id/l8"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/profilebtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:text="Profile"
                android:background="@drawable/button_color"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:checked="true"
                android:layout_weight="1"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/vzfrnds"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:background="@drawable/button_color2"
                android:text="VZFrnds"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:layout_weight="1"
                android:layout_marginLeft="-2dp"
                android:gravity="center"
                android:checked="false"
                />

            <RadioButton
                android:id="@+id/referralbtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Referral"
                android:layout_margin="0dp"
                android:layout_marginLeft="-2dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/button_color3"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:checked="false"/>


        </RadioGroup>
        </LinearLayout>


</RelativeLayout>


</FrameLayout>