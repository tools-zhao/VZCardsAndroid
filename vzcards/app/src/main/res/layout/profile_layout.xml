<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_frame"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="?android:attr/colorBackground"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#43c1d9f2"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_above="@+id/l8"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#434951"
                    android:id="@+id/l1"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/name"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:text="Name"
                        android:textSize="20sp"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#434951"
                    android:id="@+id/l2"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/l1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true">



                    <com.bitjini.vzcards.RoundedImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:id="@+id/profilePic"
                        android:src="@drawable/profile_pic_placeholder"/>

                    <com.bitjini.vzcards.RoundedImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:src="@drawable/com_logo"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/btn_pick"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.6"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#434951"
                    android:id="@+id/l3"
                    android:weightSum="1"
                    android:layout_below="@+id/l2"
                    android:gravity="right">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:text="Edit"
                        android:id="@+id/edit"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="250dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="@drawable/drawable_edit"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/l3"

                    >

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/profileList"
                        android:layout_below="@+id/Layout1"
                        android:divider="#97e6ecf2"
                        android:descendantFocusability="afterDescendants"
                        android:dividerHeight="5.0sp"
                        android:layout_above="@+id/l8"></ListView>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5f8ac7"
            android:layout_marginBottom="0dp"
            android:id="@+id/l8"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/profilebtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:text="Profile"
                    android:background="@drawable/button_color"
                    android:button="@null"
                    android:textColor="@drawable/text_color"
                    android:checked="true"
                    android:layout_weight="1"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/vzfrnds"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/button_color2"
                    android:text="VZFriends"
                    android:button="@null"
                    android:textColor="@drawable/text_color"
                    android:layout_weight="1"
                    android:layout_marginLeft="-2dp"
                    android:gravity="center"
                    android:checked="false"
                    />

                <RadioButton
                    android:id="@+id/referralbtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Referral"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="-2dp"
                    android:textColor="@drawable/text_color"
                    android:background="@drawable/button_color3"
                    android:button="@null"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:checked="false"/>


            </RadioGroup>
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>