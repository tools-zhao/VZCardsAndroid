<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_frame"
    android:layout_width="match_parent"
    android:background="?android:attr/colorBackground"
    android:layout_height="match_parent" >
<RelativeLayout
    android:layout_width="match_parent"
    android:background="#43c1d9f2"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#434951"
            android:id="@+id/l1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434951"
        android:id="@+id/l2"
        android:weightSum="3"
        android:layout_below="@+id/l1"
        android:gravity="center_horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/phone"
        android:layout_gravity="center"
        android:background="@drawable/drawable2"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/profile_pic_placeholder"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/no_pic_placeholder_white"
            android:layout_gravity="center"
            android:background="@drawable/drawable2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#434951"
        android:id="@+id/l3"
        android:weightSum="1"
        android:layout_below="@+id/l2"
        android:gravity="right">
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="Edit"
            android:id="@+id/edit"
            android:layout_weight="1"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/drawable_edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/l3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/l4"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Industry:"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:gravity="left"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/industry"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/l5"
        android:layout_below="@id/l4"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Company:"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/company"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/l6"
        android:layout_below="@id/l5"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Email:"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/email"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/l7"
        android:layout_below="@+id/l6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Address:"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/address"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:gravity="left"/>
    </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5f8ac7"
        android:layout_marginBottom="0dp"
        android:id="@+id/l8"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rdogrp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/profilebtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:text="Profile"
                android:background="@drawable/button_color"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:checked="true"
                android:layout_weight="1"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/vzfrnds"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:background="@drawable/button_color2"
                android:text="VZFrnds"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:layout_weight="1"
                android:layout_marginLeft="-2dp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/referralbtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Referral"
                android:layout_margin="0dp"
                android:layout_marginLeft="-2dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/button_color3"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center" />


        </RadioGroup>
        </LinearLayout>

</RelativeLayout>

</FrameLayout>