<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="#43c1d9f2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/text_drawable"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginRight="5dp">
            <com.bitjini.vzcards.RoundedImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/photo"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:padding="3dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/profile_pic_placeholder"/>
            />
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:id="@+id/l2">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:id="@+id/referralName"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_alignTop="@id/image1"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="referred"
                    android:gravity="right"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:id="@+id/itemName"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="top"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp">
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:id="@+id/referred"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="35dp"
                    />
                <com.bitjini.vzcards.RoundedImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/referdPhoto"
                    android:layout_marginTop="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/profile_pic_placeholder"/>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>