
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="3.0sp"
        android:background="#97e6ecf2">



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="140px"
            android:background="#fcf9f9">


            <ImageView
                android:layout_height="37dip"
                android:layout_width="40dip"
                android:weightSum="1.0"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/contact_drawable"
                android:layout_gravity="center_vertical"
                android:paddingRight="2dp"
                android:paddingBottom="3dp"
                android:src="@drawable/simple_profile_placeholder1"
                android:id="@+id/contactImage"
                />
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_weight="0.8"
                />

            <TextView
                android:gravity="top"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:id="@+id/companyName"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:textSize="15sp"
                android:id="@+id/number"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:weightSum="1.0"
                android:layout_gravity="center"
                android:src="@drawable/vz_cards_arrow"
                android:paddingRight="1dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.1dp"
            android:background="#5f8ac7"
            android:layout_below="@+id/linearLayout"></View>


    </RelativeLayout>


</LinearLayout>