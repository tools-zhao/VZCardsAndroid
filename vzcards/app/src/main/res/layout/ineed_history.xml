<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#43c1d9f2"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/l1"
        android:layout_below="@id/l0"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="What is it?"
        android:gravity="center"
        android:id="@+id/ask"
        android:layout_gravity="center"
        android:background="@drawable/text_drawable"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Description"
        android:gravity="center"
        android:id="@+id/desc"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:background="@drawable/text_drawable"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/l3"
        android:layout_below="@+id/l2"
        android:layout_gravity="center_horizontal">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/text_drawable"
        android:text="Validity"
        android:layout_gravity="center"></Spinner>
    </LinearLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:src="@drawable/vzc_need_post_btn"
        android:layout_gravity="center"
        android:id="@+id/imgbtn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/l3"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_drawable"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/l5"
        android:layout_below="@+id/imgbtn"
        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="History"
        android:gravity="center"
        android:id="@+id/history"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:background="@drawable/text_drawable"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5f8ac7"
        android:layout_marginBottom="0dp"
        android:id="@+id/l8"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/drawable1"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center">
            <Button
                android:layout_width="145dp"
                android:layout_height="30dp"
                android:id="@+id/iHave"
                android:layout_marginTop="0.2dp"
                android:background="@drawable/button_color"
                android:textColor="@drawable/text_color"
                android:text="i Have"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginLeft="-2dp"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="33dp"
                android:background="#ffffff"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/iNeed"
                android:textSize="15sp"
                android:text="i Need"
                android:background="@drawable/button_color2"
                android:textColor="@drawable/text_color"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>