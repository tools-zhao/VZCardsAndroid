<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitjini.vzcards" >


    <application
        android:allowBackup="true"
        android:icon="@drawable/vz_logo_final"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="nosensor"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustPan" android:configChanges="orientation|keyboardHidden"></activity>
        <activity
            android:name=".VerifyScreen"
            android:label="VZCards"
             android:windowSoftInputMode="adjustPan" android:screenOrientation="nosensor" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ContactsMainActivity"></activity>
        <activity android:name=".Feed_detail_has"></activity>
        <activity android:name=".Feed_detail_needs"></activity>
        <activity android:name=".Friends_Profile"></activity>
        <!--<activity android:name=".Refer_VZfriends"  android:windowSoftInputMode="stateHidden"></activity>-->
        <activity android:name=".Connect_2_Tickets"  android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".SplashScreen"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
    <!-- NEED TO ADD TO BE ABLE TO GO ONLINE AND GET DATA -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--give Phone Permission-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--camera permission-->
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>
